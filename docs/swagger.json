{
    "swagger": "2.0",
    "info": {
        "description": "API untuk upload file ke S3 menggunakan LocalStack",
        "title": "S3 File Upload API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/upload": {
            "post": {
                "description": "Upload a file to S3 bucket with optional custom path and filename",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "upload"
                ],
                "summary": "Upload file to S3",
                "parameters": [
                    {
                        "type": "file",
                        "description": "File to upload",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Custom path in S3 (e.g., 'images/2024')",
                        "name": "filePath",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "Custom filename (default: original filename)",
                        "name": "fileName",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.UploadResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handler.UploadResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handler.UploadResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handler.UploadData": {
            "type": "object",
            "properties": {
                "filePath": {
                    "type": "string"
                },
                "filename": {
                    "type": "string"
                },
                "size": {
                    "type": "integer"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "handler.UploadResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/handler.UploadData"
                },
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    }
}